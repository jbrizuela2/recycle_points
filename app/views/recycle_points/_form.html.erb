<%= form_for recycle_point do |f| %>
  <div class="columns is-mobile">
    <div class="column">
      <div class="field">
        <%= f.label "Nombre", class: "label" %>
        <p class="control">
          <%= f.text_field :name, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Dirección", class: "label" %>
        <p class="control">
          <%= f.text_field :address, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Teléfono", class: "label" %>
        <p class="control">
          <%= f.text_field :phone_number, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Materiales", class: "label" %>
        <div class="select is-fullwidth is-multiple">
          <%= f.select :material_ids, options_from_collection_for_select(Material.all, "id", "name", recycle_point.material_ids), {}, multiple: "true", size: 8 %>
        </div>
      </div>
    </div>

    <div class="column">
      <div class="field">
        <%= f.label "Municipio", class: "label" %>
        <p class="control">
          <%= f.text_field :city, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Horario", class: "label" %>
        <p class="control">
          <%= f.text_field :schedule, class: "input" %>
        </p>
      </div>
      
      <div class="field">
        <%= f.label "Página", class: "label" %>
        <p class="control">
          <%= f.text_field :website, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Costo / Recompenza", class: "label" %>
        <p class="control">
          <%= f.number_field :price, class: "input" %>
        </p>
      </div>
    </div>
  </div>

  <hr>
  
<% end %>
