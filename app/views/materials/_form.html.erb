<%= form_for material, data: { controller: "select2" } do |f| %>
  <div class="columns is-mobile">
    <div class="column">
      <div class="field">
        <%= f.label "Nombre", class: "label" %>
        <p class="control">
          <%= f.text_field :name, class: "input" %>
        </p>
      </div>

      <div class="field">
        <%= f.label "Descripción", class: "label" %>
        <p class="control">
          <%= f.text_field :description, class: "input" %>
        </p>
      </div>
    <div>
  </div>

  <div class="field">
    <%= f.label "Categorías", class: "label" %>
    <p class="control">
      <%= f.select :category_ids, options_from_collection_for_select(Category.all, "id", "name", material.category_ids), {}, multiple: true, "data-target": "select2.selectInput", style: "width: 250px;" %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.submit "Guardar", class: "button is-success" %>
    </p>
  </div>
<% end %>
